<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="Cinema"  xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://SmartSql.net/schemas/SmartSqlMapConfig.xsd smartsql/SmartSqlMap.xsd">

  <MultipleResultMaps>
    <MultipleResultMap Id="QueryByPageMReuslt">
      <Result Property="TotalCount" />
      <Result Property="Records" />
      <Result Property="PageSize" />
      <Result Property="PageNow" />
    </MultipleResultMap>
  </MultipleResultMaps>

  <Statements>
    <Statement Id="Insert">
      INSERT INTO cinemas
      (CinemaId
      ,Name
      ,CityId
      ,Address
      ,LastUpdateTime)
      VALUES
      (@CinemaId
      ,@Name
      ,@CityId
      ,@Address
      ,@LastUpdateTime
      )
      <!--;SELECT last_insert_rowid();-->
      ;SELECT last_insert_Id() as Id;
    </Statement>

    <Statement Id="InsertBatch">
      INSERT INTO cinemas
      (CinemaId
      ,Name
      ,CityId
      ,Address
      ,LastUpdateTime)
      VALUES
      <For Prepend="" Property="cinemas" Key="T" Open="" Separator="," Close="">
        (@CinemaId
        ,@Name
        ,@CityId
        ,@Address
        ,@LastUpdateTime
        )
      </For>
      ON DUPLICATE KEY UPDATE
      Name = VALUES(Name),
      Address = VALUES(Address),
      LastUpdateTime = VALUES(LastUpdateTime)
    </Statement>

    <Statement Id="QueryParams">
      <Where>
        <IsNotNull Prepend="and" Property="CityId">
          CityId = @CityId
        </IsNotNull>
        <IsNotNull Prepend="and" Property="PageSzie">
          <IsNotNull Prepend="" Property="StartIndex">
            LIMIT @StartIndex,@PageSize
          </IsNotNull>
          <IsNull Prepend="" Property="StartIndex">
            LIMIT @PageSize
          </IsNull>
        </IsNotNull>
      </Where>
    </Statement>

    <Statement Id="QueryPaged" MultipleResultMap="QueryByPageMReuslt">
      SELECT COUNT(1) FROM cinemas
      <Include RefId="QueryParams" />;
      SELECT * FROM cinemas
      <Include RefId="QueryParams" />;
      SELECT @PageSize;
      SELECT @PageNow;
    </Statement>
  </Statements>
</SmartSqlMap>