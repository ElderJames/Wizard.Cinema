<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="Wizard"  xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://SmartSql.net/schemas/SmartSqlMapConfig.xsd Smartsql/SmartSqlMap.xsd">

  <MultipleResultMaps>
    <MultipleResultMap Id="QueryByPageMReuslt">
      <Result Property="TotalCount" />
      <Result Property="Records" />
      <Result Property="PageSize" />
      <Result Property="PageNow" />
    </MultipleResultMap>
  </MultipleResultMaps>

  <Statements>
    <Statement Id="Create">
      INSERT INTO wizards
      (WizardId
      ,Email
      ,Account
      ,Password
      ,CreateTime
      )VALUES(
      @WizardId
      ,@Email
      ,@Account
      ,@Password
      ,@CreateTime
      )
      ;SELECT last_insert_Id() as Id;
    </Statement>

    <Statement Id="Update">
      UPDATE wizards SET
      <Set>
        <IsNotNull Prepend="," Property="Email">
          Email = @Email
        </IsNotNull>
        <IsNotNull Prepend="," Property="Password">
          Password = @Password
        </IsNotNull>
      </Set>
      WHERE WizardId = @WizardId;
    </Statement>

    <Statement Id="OrderAndPaged">
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          T.id Desc
        </Default>
      </Switch>
      <IsNotNull Prepend="and" Property="PageSize">
        <IsNotNull Prepend="" Property="StartIndex">
          LIMIT @StartIndex,@PageSize
        </IsNotNull>
        <IsNull Prepend="" Property="StartIndex">
          LIMIT @PageSize
        </IsNull>
      </IsNotNull>
    </Statement>

    <Statement Id="QueryParams">
      <Where>
        <IsNotNull Prepend="AND" Property="WizardId">
          WizardId = @WizardId
        </IsNotNull>
        <IsNotNull Prepend="AND" Property="Account">
          Account = @Account
        </IsNotNull>
        <IsNotNull Prepend="AND" Property="PasswardMd5">
          Password = @PasswardMd5
        </IsNotNull>
      </Where>
    </Statement>

    <Statement Id="Query">
      SELECT * FROM wizards
      <Include RefId="QueryParams"></Include>
    </Statement>

    <Statement Id="QueryPaged" MultipleResultMap="QueryByPageMReuslt">
      SELECT COUNT(1) FROM wizards
      <Include RefId="QueryParams" />
      <Include RefId="OrderAndPaged" />;
      SELECT * FROM cinemas
      <Include RefId="QueryParams" />
      <Include RefId="OrderAndPaged" />;
      SELECT @PageSize;
      SELECT @PageNow;
    </Statement>
  </Statements>
</SmartSqlMap>