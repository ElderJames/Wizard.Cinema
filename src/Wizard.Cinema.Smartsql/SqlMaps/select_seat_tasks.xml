<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="SelectSeatTask"  xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://SmartSql.net/schemas/SmartSqlMapConfig.xsd Smartsql/SmartSqlMap.xsd">

  <ParameterMaps>
    <ParameterMap Id="SessionParamMap">
      <Parameter Property="SeatNos" TypeHandler="Json" />
    </ParameterMap>
  </ParameterMaps>

  <ResultMaps>
    <ResultMap Id="QuerySessionResultMap">
      <Result Column="SeatNos" Property="SeatNos" TypeHandler="Json" />
    </ResultMap>
  </ResultMaps>

  <Statements>
    <Statement Id="BatchInsert" ParameterMap="SessionParamMap">
      INSERT INTO select_seat_tasks
      (TaskId
      ,SessionId
      ,WizardId
      ,WechatName
      ,SerialNo
      ,Total
      ,Status
      ,SeatNos
      ,BeginTime
      ,EndTime
      ,CreateTime
      )VALUES
      <For Property="tasks" Key="T" Separator="," Open="" Close="" Prepend="">
        (@TaskId
        ,@SessionId
        ,@WizardId
        ,@WechatName
        ,@SerialNo
        ,@Total
        ,@Status
        ,@SeatNos
        ,@BeginTime
        ,@EndTime
        ,@CreateTime)
      </For>
    </Statement>

    <Statement Id="Start">
      UPDATE select_seat_tasks
      SET
      Status = @Status,
      BeginTime = @BeginTime
      WHERE TaskId = @TaskId
      AND Status = 0;
    </Statement>

    <Statement Id="Select" ParameterMap="SessionParamMap">
      UPDATE select_seat_tasks
      SET
      Status = @Status,
      EndTime = @EndTime,
      SeatNos = @SeatNos
      WHERE TaskId = @TaskId
      AND Status = 5;
    </Statement>

    <Statement Id="QueryParams">
      <Where>
        <IsNotNull Prepend="AND" Property="TaskId">
          TaskId = @TaskId
        </IsNotNull>
        <IsNotNull Prepend="AND" Property="SessionId">
          SessionId = @SessionId
        </IsNotNull>
        <IsNotNull Prepend="AND" Property="WizardId">
          WizardId = @WizardId
        </IsNotNull>
        <IsNotNull Prepend="AND" Property="Status">
          Status = @Status
        </IsNotNull>
      </Where>
    </Statement>

    <Statement Id="Query" ResultMap="QuerySessionResultMap">
      SELECT * FROM select_seat_tasks
      <Include RefId="QueryParams"></Include>
    </Statement>

    <Statement Id="QueryNextTask" ResultMap="QuerySessionResultMap">
      SELECT * FROM select_seat_tasks
      WHERE
      SessionId = @SessionId
      AND SerialNo >= @SerialNo
      AND Status = 5
      LIMIT 1;
    </Statement>
  </Statements>
</SmartSqlMap>